# .gitconfig - Git Configuration
# VPS Dotfiles

[user]
    # Set your name and email
    # name = Your Name
    # email = your.email@example.com

[init]
    defaultBranch = main

[core]
    editor = nvim
    pager = less -FRX
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore_global

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[alias]
    # Status
    s = status -sb
    st = status

    # Logging
    l = log --oneline -20
    lg = log --oneline --graph --decorate
    ll = log --pretty=format:'%C(yellow)%h%Creset %s %C(cyan)<%an>%Creset %C(green)(%cr)%Creset' --abbrev-commit
    last = log -1 HEAD --stat

    # Branching
    br = branch
    bra = branch -a
    co = checkout
    cob = checkout -b
    sw = switch
    swc = switch -c

    # Committing
    ci = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit

    # Diff
    d = diff
    ds = diff --staged
    dc = diff --cached

    # Adding
    a = add
    aa = add --all
    ap = add --patch

    # Pushing/Pulling
    p = push
    pf = push --force-with-lease
    pl = pull
    f = fetch

    # Stashing
    stash-all = stash save --include-untracked
    sp = stash pop

    # Reset
    unstage = reset HEAD --
    undo = reset --soft HEAD~1

    # Cleanup
    cleanup = !git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d

    # Show aliases
    aliases = config --get-regexp alias

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[merge]
    conflictstyle = diff3
    tool = vimdiff

[diff]
    colorMoved = zebra
    tool = vimdiff

[rebase]
    autoStash = true

[rerere]
    enabled = true

[help]
    autocorrect = 10

[credential]
    helper = cache --timeout=3600
